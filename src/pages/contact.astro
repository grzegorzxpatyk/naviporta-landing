---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'

// Content
// - SEO
const SEO = {
	title: 'Tachografy Naviporta | Kontakt',
	description:
		'Potrzebujesz pomocy lub masz pytania? Skontaktuj się z nami już dzisiaj, chętnie odpowiemy na Twoje wszystkie pytania.'
}
// - Page Header
const header = {
	title: 'Masz pytania? Skontaktuj się z nami!',
	text: 'Zadzwoń do nas: +48 695 946 936. Pracujemy od poniedziałku do piątku w godzinach 16 - 21, oraz w soboty 9 - 15. Możliwe jest wykonanie serwisu w niedzielę po uprzednim umówieniu.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
</Layout>
